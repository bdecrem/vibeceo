# WEBTOYS Worktree Environment Template
# ====================================
# Copy this to .env.local in each worktree and customize ports

# Supabase Configuration (shared across all worktrees)
SUPABASE_URL={{SUPABASE_URL}}
SUPABASE_SERVICE_KEY={{SUPABASE_SERVICE_KEY}}
SUPABASE_ANON_KEY={{SUPABASE_ANON_KEY}}

# API Keys (shared across all worktrees)
OPENAI_API_KEY={{OPENAI_API_KEY}}
ANTHROPIC_API_KEY={{ANTHROPIC_API_KEY}}
EXTENSION_AUTH_TOKEN={{EXTENSION_AUTH_TOKEN}}

# Twilio Configuration (shared)
TWILIO_ACCOUNT_SID={{TWILIO_ACCOUNT_SID}}
TWILIO_AUTH_TOKEN={{TWILIO_AUTH_TOKEN}}
TWILIO_PHONE_NUMBER={{TWILIO_PHONE_NUMBER}}
TWILIO_MESSAGING_SERVICE_SID={{TWILIO_MESSAGING_SERVICE_SID}}

# SendGrid Configuration (shared)
SENDGRID_API_KEY={{SENDGRID_API_KEY}}
SENDGRID_FROM_EMAIL={{SENDGRID_FROM_EMAIL}}

# Worktree-specific Configuration
WORKTREE_ID={{WORKTREE_ID}}
WORKTREE_BRANCH={{WORKTREE_BRANCH}}

# Port Configuration (unique per worktree)
SMS_BOT_PORT={{SMS_PORT}}
WEB_PORT={{WEB_PORT}}
NGROK_PORT={{NGROK_PORT}}
PORT={{WEB_PORT}}

# Development URLs (unique per worktree)
NEXT_PUBLIC_APP_URL=http://localhost:{{WEB_PORT}}
WEBHOOK_URL=https://{{NGROK_SUBDOMAIN}}.ngrok.io

# Ngrok Configuration (unique per worktree)
NGROK_SUBDOMAIN={{NGROK_SUBDOMAIN}}
NGROK_AUTH_TOKEN={{NGROK_AUTH_TOKEN}}

# Database Configuration (shared but with worktree context)
DATABASE_URL={{SUPABASE_URL}}
DATABASE_KEY={{SUPABASE_SERVICE_KEY}}

# Environment
NODE_ENV=development
ENVIRONMENT=worktree-{{WORKTREE_ID}}

# Logging (unique per worktree)
LOG_LEVEL=debug
LOG_FILE_PREFIX=worktree-{{WORKTREE_ID}}

# Feature Flags (can be customized per worktree for testing)
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_MODE=true
ENABLE_DEVELOPMENT_WEBHOOKS=true

# Railway/Production Compatibility
# These ensure the worktree can deploy if needed
RAILWAY_STATIC_URL=http://localhost:{{WEB_PORT}}
RAILWAY_PROJECT_NAME=vibeceo8-worktree-{{WORKTREE_ID}}