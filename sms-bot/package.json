{
	"name": "vibeceo-sms-bot",
	"version": "1.0.0",
	"description": "SMS bot for VibeCEO",
	"main": "dist/src/index.js",
	"type": "module",
	"scripts": {
		"validate": "node scripts/validate-architecture.cjs",
		"build": "npm run validate && tsc && cp -r content dist/",
		"start": "node dist/src/index.js",
		"dev": "npm run build && npm run start",
		"test:sms": "npm run build && node dist/scripts/test-sms-flow.js",
		"test:sendgrid": "npm run build && node dist/scripts/test-sendgrid.js",
		"test:email": "npm run build && node dist/scripts/test-email-broadcast.js",
		"test:list": "npm run build && node dist/scripts/test-list-broadcast.js",
		"test:twilio": "npm run build && node dist/scripts/test-twilio.js",
		"test:supabase": "npm run build && node dist/scripts/test-supabase.js",
		"test:email-webhook": "npm run build && node dist/scripts/test-email-webhook.js",
		"broadcast:sms": "npm run build && node dist/scripts/broadcast-sms.js",
		"broadcast:all": "npm run build && node dist/scripts/broadcast-sms-and-email.js",
		"send-confirmations": "npm run build && node dist/scripts/send-confirmation-sms.js",
		"delete-subscriber": "npm run build && node dist/scripts/delete-subscriber.js",
		"start:prod": "NODE_ENV=production node dist/src/index.js",
		"start:dev": "nodemon --watch 'src/**/*.ts' --exec 'npm run dev'",
		"subscribers": "npm run build && node dist/scripts/list-subscribers.js",
		"test:wtaf": "npm run build && node dist/test-wtaf-production.js",
		"dev:reroute": "npm run build && node dist/scripts/dev-reroute.js",
		"dev:reroute:v2": "npm run build && node dist/scripts/dev-reroute-v2.js",
		"replace-og-image": "npm run build && node dist/scripts/replace-og-image.js",
		"replace-og-from-upload": "npm run build && node dist/scripts/replace-og-from-upload.js",
		"test:og-upload": "npm run build && node dist/test-scripts/test-og-upload.js",
		"fix-og-meta-tags": "npm run build && node dist/scripts/fix-og-meta-tags.js",
		"trending-og-workflow": "npm run build && node dist/scripts/trending-og-workflow.js",
		"fix-zad-types": "npm run build && node dist/scripts/fix-zad-types.js",
		"check-app": "npm run build && node dist/scripts/check-app.js",
		"fix-single-app": "npm run build && node dist/scripts/fix-single-app.js",
		"classify-app-types": "npm run build && node dist/scripts/classify-app-types.js",
		"classify-app-types-sample": "npm run build && node dist/scripts/classify-app-types-sample.js"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.39.0",
		"@sendgrid/mail": "^8.1.3",
		"@supabase/supabase-js": "^2.49.9",
		"@types/multer": "^1.4.13",
		"axios": "^1.9.0",
		"body-parser": "^1.20.2",
		"chokidar": "^4.0.3",
		"dotenv": "^16.5.0",
		"express": "^4.18.2",
		"ioredis": "^5.6.0",
		"luxon": "^3.6.1",
		"multer": "^2.0.1",
		"node-fetch": "^2.7.0",
		"openai": "^4.100.0",
		"p-limit": "^6.2.0",
		"puppeteer": "^24.15.0",
		"twilio": "^5.8.0",
		"unique-names-generator": "^4.7.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/luxon": "^3.6.2",
		"@types/node": "^20.11.0",
		"@types/node-fetch": "^2.6.11",
		"nodemon": "^3.0.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.3.3"
	},
	"author": "",
	"license": "ISC",
	"engines": {
		"node": ">=18.0.0"
	}
}
