{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"outDir": "./dist",
		"strict": false,
		"skipLibCheck": true,
		"paths": {
			"@synthmachine/*": ["../synthmachine/*"]
		},
		"baseUrl": "."
	},
	"include": [
		"src/**/*",
		"lib/**/*",
		"scripts/**/*",
		"test-scripts/**/*",
		"engine/**/*",
		"commands/**/*",
		"agents/**/*",
		"test-wtaf-production.ts",
		"../synthmachine/core/**/*",
		"../synthmachine/machines/**/*"
	],
	"exclude": ["node_modules", "scripts/archives"]
}
