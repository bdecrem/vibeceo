#!/bin/sh
# Pre-commit hook to ensure documentation is updated

echo "ğŸ” Checking documentation sync..."

# Run documentation validation
npm run docs:validate

if [ $? -ne 0 ]; then
    echo "âŒ Documentation is out of sync with code!"
    echo "ğŸ“ Running auto-generation..."
    npm run docs:generate
    echo "âœ… Documentation updated. Please review and add to commit."
    exit 1
fi

echo "âœ… Documentation is in sync!"