{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "lib/discord/types/*"]
    }
  },
  "include": [
    "lib/discord/**/*.ts",
    "lib/discord/**/*.d.ts",
    "data/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "discord-bot",
    "dist"
  ]
} 