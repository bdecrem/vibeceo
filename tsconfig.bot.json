{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "scripts/**/*",
    "lib/discord/!(__tests__)/**/*",
    "data/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "app"
  ]
} 