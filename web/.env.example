# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Site URL Configuration (for auth redirects)
# Set to http://localhost:3000 in development
# Set to https://webtoys.ai in production (Railway)
NEXT_PUBLIC_SITE_URL=https://webtoys.ai

# Twilio Configuration (for SMS verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# LemonSqueezy Configuration (for payments)
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key_here
LEMONSQUEEZY_STORE_ID=your_store_id_here
LEMONSQUEEZY_VARIANT_ID=your_variant_id_for_10_dollar_credits
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here

# NextAuth Configuration (for session tokens)
NEXTAUTH_SECRET=your_nextauth_secret_here

# Application Configuration
NODE_ENV=development

# Site URL for Supabase Auth redirects
# This MUST match the Site URL in your Supabase Dashboard
NEXT_PUBLIC_SITE_URL=https://webtoys.ai

# WebSocket Server Configuration (for Interactive Mode in music player)
# In development: ws://localhost:3001
# In production (Railway): Set to your WebSocket service URL (e.g., wss://ws-kochi.railway.app)
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# OpenAI Configuration (for Realtime Audio API)
OPENAI_API_KEY=your_openai_api_key_here

# WebSocket Server Port (defaults to 3001)
WS_PORT=3001

# Gmail OAuth Configuration (for personalization)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://webtoys.ai/api/oauth/gmail/callback

# OAuth Token Encryption Key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# This is a 64-character hex string used to encrypt OAuth tokens at rest
# CRITICAL: Keep this secret and never change it (changing it invalidates all existing tokens)
OAUTH_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here