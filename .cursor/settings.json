{
  "puppeteer": {
    "headless": true,
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--disable-gpu"
    ],
    "defaultViewport": {
      "width": 1024,
      "height": 768
    },
    "timeout": 30000
  }
} 