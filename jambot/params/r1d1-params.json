{
  "_meta": {
    "name": "R1D1",
    "description": "SH-101 Lead/Poly Synth",
    "version": "2.0",
    "units": {
      "dB": "Volume levels (-60 to +6, 0 = unity)",
      "0-100": "Knob position (like hardware)",
      "Hz": "Filter/LFO frequency",
      "semitones": "Pitch adjustment"
    }
  },
  "lead": {
    "level": { "unit": "dB", "min": -60, "max": 6, "default": 0 },

    "vcoSaw": { "unit": "0-100", "min": 0, "max": 100, "default": 50, "hint": "sawtooth level" },
    "vcoPulse": { "unit": "0-100", "min": 0, "max": 100, "default": 50, "hint": "pulse level" },
    "pulseWidth": { "unit": "0-100", "min": 5, "max": 95, "default": 50, "hint": "5=thin, 50=square, 95=thin" },

    "subLevel": { "unit": "0-100", "min": 0, "max": 100, "default": 0, "hint": "sub-oscillator level" },
    "subMode": { "unit": "choice", "options": [0, 1, 2], "labels": ["-1 oct square", "-1 oct pulse", "-2 oct pulse"], "default": 0 },

    "cutoff": { "unit": "Hz", "min": 20, "max": 16000, "default": 2000, "hint": "filter cutoff" },
    "resonance": { "unit": "0-100", "min": 0, "max": 100, "default": 30, "hint": "0=clean, 100=self-oscillates" },
    "envMod": { "unit": "0-100", "min": 0, "max": 100, "default": 50, "hint": "filter envelope depth" },

    "attack": { "unit": "0-100", "min": 0, "max": 100, "default": 0, "hint": "0=instant, 100=slow fade in" },
    "decay": { "unit": "0-100", "min": 0, "max": 100, "default": 30, "hint": "fall to sustain level" },
    "sustain": { "unit": "0-100", "min": 0, "max": 100, "default": 70, "hint": "held level" },
    "release": { "unit": "0-100", "min": 0, "max": 100, "default": 30, "hint": "fade out after note off" },

    "lfoRate": { "unit": "0-100", "min": 0, "max": 100, "default": 30, "hint": "0=slow, 100=fast wobble" },
    "lfoWaveform": { "unit": "choice", "options": ["triangle", "square", "random"], "default": "triangle" },
    "lfoToPitch": { "unit": "semitones", "min": 0, "max": 24, "default": 0, "hint": "vibrato depth" },
    "lfoToFilter": { "unit": "0-100", "min": 0, "max": 100, "default": 0, "hint": "filter wobble depth" },
    "lfoToPW": { "unit": "0-100", "min": 0, "max": 100, "default": 0, "hint": "pulse width modulation" }
  }
}
