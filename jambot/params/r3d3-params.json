{
  "_meta": {
    "name": "R3D3",
    "description": "TB-303 Acid Bass Synth",
    "version": "2.0",
    "units": {
      "dB": "Volume levels (-60 to +6, 0 = unity)",
      "0-100": "Knob position (like hardware)",
      "Hz": "Filter frequency"
    }
  },
  "bass": {
    "level": { "unit": "dB", "min": -60, "max": 6, "default": 0 },
    "cutoff": { "unit": "Hz", "min": 100, "max": 10000, "default": 1000, "hint": "filter cutoff frequency" },
    "resonance": { "unit": "0-100", "min": 0, "max": 100, "default": 50, "hint": "0=clean, 100=screaming" },
    "envMod": { "unit": "0-100", "min": 0, "max": 100, "default": 50, "hint": "filter envelope depth" },
    "decay": { "unit": "0-100", "min": 0, "max": 100, "default": 50, "hint": "filter envelope decay" },
    "accent": { "unit": "0-100", "min": 0, "max": 100, "default": 80, "hint": "accent intensity" },
    "waveform": { "unit": "choice", "options": ["sawtooth", "square"], "default": "sawtooth" }
  }
}
